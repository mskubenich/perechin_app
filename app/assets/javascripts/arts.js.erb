        }
    });
}


function add_comment_handler(new_comment_url){
    j("#add_comment").click(function(){
        if(j("#new_comment").val().trim() != ""){
            j.ajax({
                url: new_comment_url,
                data: {text: j("#new_comment").val()},
                type: 'POST',
                beforeSend: function () {
                },
                complete: function(){
                },
                error: function(err){
                    alert("error");
                },
                success: function(data){
                    j("#comments").append(data);
                    j("#new_comment").val("");
                }
            });
        }
    });
}