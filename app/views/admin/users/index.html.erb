<br/><table class="data-list" cellpadding="0" cellspacing="0">
  <% @users.each do |user|%>
    <tr>
      <td>
          <%= image_tag user.avatar.url(:original) %>
      </td>
      <td>
        <%= link_to user.name, user_path(user) %>
      </td>
      <td>
        <%= user.email %>
      </td>
      <td>
        <%= user.created_at %>
      </td>
      <td>
        <%= user.role.name %>
      </td>
      <td>
        <%= user.join_confirmation ? "not activated" : "" %>
      </td>
    </tr>
  <% end %>
</table>