<%= form_for(@anecdote, :html => {:multipart => true}) do |f| %>
    <% if @anecdote.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@anecdote.errors.count, "error") %>
            prohibited this news from being saved:</h2>
          <p>There were problems with the following fields:</p>
          <ul>
            <% @anecdote.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.label 'Заголовок:' %><br />
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label 'Анекдот:' %><br />
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit "Додати анекдот", :class => 'button submit_button' %>
    </div>
<% end %>


