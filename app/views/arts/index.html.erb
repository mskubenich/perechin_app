<h2><%= @category.title if @category%><%= " > " + @art_subcategory.title if @art_subcategory%></h2>

<div class="authors">
  <table class="atohrs_table">
      <% @authors.each do |author| %>
        <tr>
          <td>
            <%= image_tag author.avatar.url(:original) %>
          </td>
        </tr>
        <tr>
          <td>
            <%= link_to author.name, user_path(author) %>
          </td>
        </tr>
      <% end %>
  </table>
</div>

<div class="art_content">
  <% @works.each do |work| %>
      Title:<%= link_to work.title, art_path(work) %><br/>
      Author:<%= work.author.name %><br/>
      Created_at:<%= work.created_at %><br/>
      Category:<%= work.art_subcategory.art_category.title %><br/>
      Subcategory:<%= work.art_subcategory.title %><br/>
      <% if current_user && (current_user.role.name == "admin" || current_user == work.author) %>
        <%= button_to "Change", edit_art_path(work), :method => :get, :class => "edit_button" -%>
        <%= button_to "Delete", art_path(work), :method => :delete, :class => "remove_button", :confirm => "Are you sure you wont to delete art ?" %>
      <% end %>
      <br/>
      Body: <%= work.body %>
      <hr/>
  <% end %>
</div>

<div class="clr"></div>

<%= content_for :art_categories do %>
  <%= render :partial => 'sidebar', :locals => {:art_categories => @art_categories, :category => @category}%>
<% end %>