<header>
  <div class="logo">
    Perechin.net
  </div>
  <div class="auth">
    <ul>
    <% if signed_in? %>
        <li><%= link_to "Profile", current_user %></li>
        <li><%= link_to "Sign out", signout_path, :method => :delete %></li>
    <% else %>
        <li><%= link_to "Sign in", signin_path %></li>
        <li><%= link_to "Sign up", sign_up_path %></li>
    <% end %>
    </ul>
  </div>
  <div class="links">
    <ul>
      <li>
        <%= link_to "Home", root_path %>
      </li>
    </ul>
  </div>
</header>