    %title
      = title
    = csrf_meta_tag
    = stylesheet_link_tag 'application', controller_path,  :media => 'screen'
    = javascript_include_tag :application, controller_path
    = favicon_link_tag 'favicon.ico'
    = yield :assets
  %body
