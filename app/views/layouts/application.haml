          %span.phrase
            Портал твого міста.
        .col_7.right
          = render partial: 'layouts/authentikation'
      .grid.flex
        .col_12
          %ul.menu.right
            %li{ class: "#{ 'current' if controller.controller_name == 'pages'}"}
              = link_to raw('<i class="icon-home"></i>Головна'), root_path
            %li{ class: "#{ 'current' if controller.controller_name == 'news'}"}
              = link_to raw('<i class="icon-globe" ></i>Новини'), news_index_path
            %li
              = link_to raw('<i class="icon-book"></i>Статті'), articles_path
            %li
              = link_to raw('<i class="icon-film"></i>Мистецтво'), arts_path
            %li
              = link_to raw('<i class=" icon-plane"></i>Місця'), maps_path
            %li
              = link_to raw('<i class="icon-lightbulb"></i>Фіглі'), anecdotes_path
        .col_3
          = content_for :sidebar
        .col_9
          = yield
