<div class="article">
  <p class="date"><%= @news.created_at.year %><span><%= @news.created_at.day%>/<%= @news.created_at.month %></span></p>
  <h2 class="block-header"><span><%= @news.title %></span></h2>
  <div class="clr"></div>
  <p>Розмістив: <%= @news.user.name %> &nbsp;|&nbsp; Теги:
    <% @news.tags.each do |tag| %>
        <%= link_to tag.title, news_index_path(:tag => tag.id)%>,
    <% end %>
  </p>
  <% if @news.id <= 25 && @news.attached_assets.count > 0 %>
  <div id="galleria">
    <% @news.attached_assets.each do |asset| %>
        <%= image_tag asset.asset.url(:original) %>
    <% end %>
  </div>
  <% end %>
  <div class="news_body"><%= raw @news.body %></div>
  <div>Джерело:&nbsp; <%= raw @news.source %></div>
  <div class="buttons">
    <% if current_user && current_user.role.name == "admin" %>
        <%= button_to "Видалити", news_path(@news), :method => :delete, :class => " button remove_button", :confirm => "Are you sure you wont to delete news ?" %>
        <%= button_to "Змінити", edit_news_path(@news), :method => :get, :class => "button edit_button" %>
    <% end %>
  </div>
</div>

<div id="comments">
  <div class="news_title">Discussion: <%= @news.comments.count.to_s %> comments:</div>
  <% @news.comments.each do |comment| %>
      <%= render :partial => 'comment', :locals => { :comment => comment } %>
  <% end %>
</div>

<% if current_user %>
<div>
  <div class="news_title">Add comment:</div>
  <textarea id="new_comment" cols="78" rows="10">

  </textarea>
  <br/>
  <input type="button" id="add_comment" value="Add comment"/>
</div>

<script type="text/javascript">
    j(document).ready(function(){
        add_comment_handler('<%= news_new_comment_url(@news) %>');
    });
</script>
<% end %>