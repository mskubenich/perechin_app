<div id="galleria">
</div>
<div class="news_list">
  <br/>Останні новини:<br/>
  <ul class="preview_block">
    <% if @last_news[0..5]%>
        <% @last_news[0..5].each do |news|%>
            <li>
            <div>
              <div>
                <% if news.attached_assets.count > 0 %>
                      <%= image_tag news.attached_assets[0].asset.url(:original)%>
                <% end %>
              </div>
              <span class="gray_span">
                <%= news.created_at.day%>/<%= news.created_at.month %>/<%= news.created_at.year %>&nbsp;
              </span>
              <%= link_to news.title.to_s, news_path(news) %>
            </div>
        <% end %>
    <% end %>
  </ul>
  <br/>
  <% if @last_news[5..@last_news.length]%>
      <% @last_news[5..@last_news.length].each do |news|%>
        <span class="gray_span">
          <%= news.created_at.day%>/<%= news.created_at.month %>/<%= news.created_at.year %>&nbsp;
        </span>
        <%= link_to news.title.to_s, news_path(news) %>
        <br/>
      <% end %>
  <% end %>
  <%= link_to 'Більше новин', news_index_path, :class => "button link_button big_button" %>
</div>

<div class="news_list">
<br/>Останні статті:<br/>
  <ul class="preview_block">
    <% if @last_articles[0..5]%>
        <% @last_articles[0..5].each do |article|%>
            <li>
              <div>
                <div>
                  <% if article.attached_assets.count > 0 %>
                      <%= image_tag article.attached_assets[0].asset.url(:original)%>
                  <% end %>
                </div>
              <span class="gray_span">
                <%= article.created_at.day%>/<%= article.created_at.month %>/<%= article.created_at.year %>&nbsp;
              </span>
                <%= link_to article.title.to_s, articles_path(article) %>
              </div>
        <% end %>
    <% end %>
  </ul>
  <br/>
  <% if @last_articles[5..@last_articles.length]%>
      <% @last_articles[5..@last_articles.length].each do |article|%>
        <span class="gray_span">
          <%= article.created_at.day%>/<%= article.created_at.month %>/<%= article.created_at.year %>&nbsp;
        </span>
          <%= link_to article.title.to_s, articles_path(article) %>
          <br/>
      <% end %>
  <% end %>
<%= link_to 'Більше статей', articles_path, :class => "button link_button big_button" %>
</div>


<script type="text/javascript">
    j(document).ready(function(){
        if(j("#galleria")){
            Galleria.loadTheme('/assets/galleria/themes/classic/galleria.classic.min.js');
            var data = [
                <% @galleria_news.each do |news|%>
                    <% if news.attached_assets.count > 0 %>
                        {
                            image: '<%= news.attached_assets[0].asset.url(:original) if news.attached_assets.count > 0 %>',
                            title: '<%= news.title.gsub("'", "\"").gsub("\r", " ").gsub("\n", " ") %>',
                            description: '',
                            link: '<%= news_path(news)%>'
                        }
                        <% if news != @galleria_news.last %>
                        ,
                        <% end %>
                    <% end %>
                <% end %>
            ];
            Galleria.configure({
                autoplay: true,
                dataSource: data
            });

            Galleria.run('#galleria');
        }
    });
</script>


<%= content_for :sidebar do %>
    <%= render :partial => 'sidebar', :locals => {:tags => @tags}%>
    <%= render :partial => 'layouts/anecdote' %>
<% end %>